<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="tests/yii/tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Run on Yii App Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
            <exclude>
                <directory>./tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
